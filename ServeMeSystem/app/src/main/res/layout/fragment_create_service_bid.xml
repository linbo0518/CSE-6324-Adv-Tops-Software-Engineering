    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/layout_border"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/regText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:text="Bid Request"
            android:textColor="@color/color_primary_variant"
            android:textSize="25dp"
            android:textStyle="bold" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_service_bid_amountLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Amount"
                app:startIconDrawable="@drawable/ic_attach_money_black_24dp"
                android:textColor="@color/color_primary"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_service_bid_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Amount"
                    android:background="@drawable/input_border"
                    android:inputType="number"
                    android:ems="15"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_service_bid_hoursLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Hours"
                app:startIconDrawable="@drawable/ic_time_picker_24dp"
                android:textColor="@color/color_primary"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_service_bid_hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/input_border"
                    android:hint="Hours"
                    android:inputType="number"
                    android:ems="15"
                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/create_service_commentsLbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Comments"
                app:startIconDrawable="@drawable/ic_insert_comment_black_24dp"
                android:textColor="@color/color_primary"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/create_service_bid_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:hint="Comments"
                    android:background="@drawable/input_border"
                    android:inputType="textCapSentences|textMultiLine"
                    android:minLines="6"
                    android:ems="15"
                    android:scrollbars="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/create_service_commentsLbl" />
            </com.google.android.material.textfield.TextInputLayout>

